const caixaPrincipal = document.querySelector(".caixa-principal"); const caixaPerguntas = document.querySelector(".caixa-perguntas"); const caixaAlternativas = document.querySelector(".caixa-alternativas"); const caixaResultado = document.querySelector(".caixa-resultado"); const textoResultado = document.querySelector(".texto-resultado"); const perguntas = [ { enunciado: "Você acabou de sair da aula e o sol está rachando. Qual o seu primeiro pensamento?", alternativas: [ { texto: "Um sorvete bem gelado cairia super bem agora!", afirmacao: "Você é da turma que não dispensa um sorvete para refrescar. " }, { texto: "Será que tem um lugar por perto que vende um sorvete artesanal?", afirmacao: "Você busca por experiências mais autênticas e de qualidade na hora de escolher seu sorvete." } ] }, { enunciado: "Você chegou na sorveteria. Qual o seu primeiro passo?", alternativas: [ { texto: "Vou direto para os sabores clássicos: chocolate, creme ou morango.", afirmacao: "Você prefere o conforto e a tradição dos sabores que já conhece e adora." }, { texto: "Olho todas as opções, procurando algo diferente ou um lançamento.", afirmacao: "Você gosta de experimentar coisas novas e está sempre em busca da próxima sensação." } ] }, { enunciado: "Com o sorvete em mãos, você percebe que está muito calor e ele começa a derreter rápido. O que você faz?", alternativas: [ { texto: "Como o mais rápido possível para não perder nada!", afirmacao: "Você é prático e não gosta de desperdício, aproveitando cada gota do seu sorvete." }, { texto: "Tento comer de um jeito que minimize a bagunça, talvez comendo em um copinho.", afirmacao: "Você é cuidadoso e prefere desfrutar do seu sorvete com calma e sem preocupações com a sujeira." } ] }, { enunciado: "Um amigo te pergunta qual é o seu sabor de sorvete favorito e por quê.", alternativas: [ { texto: "É difícil escolher um só, mas adoro sabores com frutas, tipo maracujá ou limão, por serem refrescantes.", afirmacao: "Você valoriza a leveza e o frescor nos sorvetes, buscando uma experiência mais vibrante." }, { texto: "Sou fã de sorvetes cremosos, como pistache ou nozes, porque são mais intensos e com textura.", afirmacao: "Você aprecia a riqueza dos sabores e a cremosidade, buscando uma experiência mais indulgente." } ] }, { enunciado: "Você está em casa e bate aquela vontade de sorvete, mas não tem nenhum. O que você faz?", alternativas: [ { texto: "Improviso com o que tenho: frutas congeladas, iogurte... viro um mestre da sobremesa caseira!", afirmacao: "Você é criativo e não se deixa abalar pela falta de sorvete, criando suas próprias delícias." }, { texto: "Chamo alguém para ir na sorveteria mais próxima, porque sorvete bom tem que ser de lá.", afirmacao: "Você é um verdadeiro apreciador e acredita que a experiência de ir à sorveteria faz parte do prazer." } ] }, ]; let atual = 0; let perguntaAtual; let historiaFinal = ""; function mostraPergunta() { if (atual >= perguntas.length) { mostraResultado(); return; } perguntaAtual = perguntas[atual]; caixaPerguntas.textContent = perguntaAtual.enunciado; caixaAlternativas.textContent = ""; mostraAlternativas(); } function mostraAlternativas(){ for(const alternativa of perguntaAtual.alternativas) { const botaoAlternativas = document.createElement("button"); botaoAlternativas.textContent = alternativa.texto; botaoAlternativas.addEventListener("click", () => respostaSelecionada(alternativa)); caixaAlternativas.appendChild(botaoAlternativas); } } function respostaSelecionada(opcaoSelecionada) { const afirmacoes = opcaoSelecionada.afirmacao; historiaFinal += afirmacoes + " "; atual++; mostraPergunta(); } function mostraResultado() { caixaPerguntas.textContent = "Sua jornada com o sorvete revela..."; textoResultado.textContent = historiaFinal; caixaAlternativas.textContent = ""; } mostraPergunta();
